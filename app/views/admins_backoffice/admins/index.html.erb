<h1>Listando os Administradores</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
    <tr>
      <th scope="row"><%= admin.id %></th>
      <td><%= admin.email %></td>
      <td style="width=100px;">
        <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle btn-sm" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <a href="#" class="btn btn-danger btn-circle btn-sm">
          <i class="fas fa-trash"></i>
        </a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
