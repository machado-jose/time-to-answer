<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
      <div class="col-lg-6">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user"}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user", placeholder: "Digite o seu email..." %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-user", placeholder: "Senha" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="custom-control custom-checkbox small">
                  <%= f.check_box :remember_me, class: "custom-control-input" %>
                  <label class="custom-control-label">Lembrar-me</label>
                </div>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

