<div>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1>Login</h1>

          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
          </div>
          
          <div class="d-flex justify-content-center">
            <%= f.submit "Entrar", class:"btn btn-success submit", style:"float:none;margin-left:0px;" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <div>
              <h1><i class="fa fa-paw"></i> Time to Answer</h1>
              <p>Â©2020 All Rights Reserved. Privacy and Terms</p>
            </div>
          </div>

        <% end %>
      </section>
    </div>
  </div>
</div>
